<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f7f7f7;
    }

    header {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
    }

    h1 {
      font-size: 2em;
      margin: 0;
    }

    .container {
      padding: 20px;
      max-width: 600px;
      margin: 0 auto;
    }

    .url-form {
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;
    }

    .url-form label {
      font-size: 1.2em;
      margin-bottom: 5px;
    }

    .url-form input {
      padding: 10px;
      font-size: 1em;
      margin-bottom: 10px;
    }

    .url-form button {
      padding: 10px 20px;
      font-size: 1em;
      background-color: #333;
      color: #fff;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .url-form button:hover {
      background-color: #555;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 15px;
      text-align: left;
    }

    th {
      background-color: #333;
      color: #fff;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
        padding-top: 60px;
      }
  
      .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
      }
  
      .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
      }
  
      .close:hover,
      .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
      }

  </style>
</head>
<body>
  <header>
    <h1>URL Shortener</h1>
  </header>
  <div class="container">
    <% if (locals.id) { %>
      <p>URL Generated: <a href="http://localhost:3000/url/<%= id %>">http://localhost:3000/url/<%= id %></a></p>
    <% } %>

    <script>
        // Function to display the modal (dialog)
        function displayModal() {
          const modal = document.getElementById('modal');
          modal.style.display = 'block';
        }
    
        // Function to close the modal (dialog)
        function closeModal() {
          const modal = document.getElementById('modal');
          modal.style.display = 'none';
        }
    
        // Function to handle form submission and display modal if URL is empty
        function handleSubmit(event) {
          const urlInput = document.getElementById('urlInput').value;
          if (!urlInput) {
            event.preventDefault(); // Prevent form submission
            displayModal(); // Display the modal
          }
        }
      </script>
    
      <div id="modal" class="modal">
        <div class="modal-content">
          <span class="close" onclick="closeModal()">&times;</span>
          <p>Please enter a URL.</p>
        </div>
      </div>
    
      <div class="container">
        <div class="url-form">
          <form method="POST" action="/url" onsubmit="handleSubmit(event)">
            <label for="urlInput">Enter Original URL</label>
            <input type="text" id="urlInput" name="url" placeholder="https://www.google.com" />
            <button type="submit">Generate</button>
          </form>
        </div>

    <div>
      <% if (locals.urls) { %>
        <table>
          <thead>
            <tr>
              <th>S.No</th>
              <th>Short ID</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= url.shortId %></td>
                <td><a href="<%= url.redirectURL %>"><%= url.redirectURL %></a></td>
                <td><%= url.visitHistory.length %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
  
</body>
</html>
